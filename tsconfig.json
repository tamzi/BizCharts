{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2015",
    "jsx": "react",
    "baseUrl": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "bizcharts": [
        "./src/index"
      ],
      "bizcharts/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "umd"
  ]
}
